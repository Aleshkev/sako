---
const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html
  lang="en"
  class="w-full min-h-screen bg-gradient-to-br from-gray-900 to-slate-900"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/sako/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
  </head>
  <body class="bg-[url('/sako/retro.jpg')] bg-fixed bg-cover bg-center">
    <main class="mx-auto max-w-7xl p-1 md:p-8">
      <div class="p-4 md:p-8 bg-white/70 rounded-md backdrop-blur-md">
        <h1 class="drop-shadow-lg font-semibold text-slate-900 text-2xl">
          {frontmatter.title}
        </h1>
        <slot />
      </div>
    </main>
    <aside class="h-screen flex flex-col justify-end">
      <footer class="text-white italic font-semibold drop-shadow-xl shadow-white p-6">
        <p>Â© 2023</p>
        <p>Based on <a href="en.wikipedia.org/wiki/SAKO_(programming_language)">SAKO</a> 1971</p>
      </footer>
    </aside>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Josefin%20Sans:wght@400&display=swap');
</style>
